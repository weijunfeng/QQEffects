package com.itheima42.pressuredemo;

import android.content.Context;
import android.graphics.Bitmap;
import android.graphics.BitmapFactory;
import android.graphics.Canvas;
import android.graphics.Color;
import android.graphics.Paint;
import android.view.View;

/**
 * 锅炉压力的自定义View
 * 
 * 自定义View的绘制步骤： measure(测量) - layout(排版/布局) - draw(绘制)
 * 							|					|   		  |
 * 						onMeasure()   -     onLayout()   - onDraw()
 *  
 * @author poplar
 *
 */
public class PressureView extends View {

	int pressure = 0;
	private Paint paint;
	private Bitmap bitmap;
	
	public PressureView(Context context) {
		super(context);
		paint = new Paint();
		bitmap = BitmapFactory.decodeResource(getResources(), R.drawable.bomb);
		
	}
	
	public void setPressure(int pressure){
		this.pressure = pressure;
		if(pressure < 100){
			paint.setColor(Color.GREEN);
		} else if (pressure < 200) {
			paint.setColor(Color.YELLOW);
		} else {
			paint.setColor(Color.RED);
		}
		postInvalidate();
		
	}
	
	/**
	 * 画布、画板
	 * 所有的view都会被画在这个canvas上
	 */
	@Override
	protected void onDraw(Canvas canvas) {
		
		if(pressure > 250){
			
			canvas.drawBitmap(bitmap, 0, 0, null);
			
		}else {
			int top = 320 - pressure;
			/**
			 * left = 30
			 * top = bottom - pressure
			 * right = 30 + 50
			 * bottom = 320
			 */
			canvas.drawRect(30, top, 80, 320, paint);
		}
		
	}

}









