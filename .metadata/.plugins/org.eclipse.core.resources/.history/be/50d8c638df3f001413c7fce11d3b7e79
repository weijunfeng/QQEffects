package com.itheima42.compressdemo;

import android.content.Context;
import android.graphics.Bitmap;
import android.graphics.BitmapFactory;
import android.graphics.Canvas;
import android.graphics.Color;
import android.graphics.Paint;
import android.view.View;


/**
 * 锅炉压力显示柱状图
 * @author poplar
 * 
 * Android自定义View 三步： measure(测量) - layout(布局) - draw(绘制)
 * 								|				| 			|
 *							onMeasure()		onLayout()    onDraw() 	
 */
public class PressureView extends View {

	/**
	 * 锅炉压力值
	 */
	int pressure = 0;
	private Paint paint;
	private Bitmap bm;
	public PressureView(Context context) {
		super(context);
		paint = new Paint();
		paint.setTextSize(21);
		bm = BitmapFactory.decodeResource(getResources(), R.drawable.bomb);
	}
	/**
	 * 设置锅炉压力值
	 * @param pressure
	 */
	public void setPressure(int pressure){
		this.pressure = pressure;
		
		if(pressure < 100){
			paint.setColor(Color.GREEN);
		} else if (pressure < 200) {
			paint.setColor(Color.YELLOW);
		} else {
			paint.setColor(Color.RED);
		}
		
		/**
		 * 重绘画板
		 */
		postInvalidate();
	}

	/**
	 * 绘制内容的画板，所有的内容都被绘制在这个画板上
	 * 
	 */
	@Override
	protected void onDraw(Canvas canvas) {
		
		if(pressure > 250){
			canvas.drawBitmap(bm, 0, 0, null);
			canvas.drawText("锅炉要爆炸啦，小命要紧，快跑！！", 0, bm.getHeight() + 50, paint);
		}else {
			int bottom = 280;
			int top = bottom - pressure;
			/**
			 * left = 20
			 * top = 30
			 * right = 70
			 * bottom = 280
			 */
			canvas.drawRect(20, top, 70, bottom, paint);
		}
		
	}
	

}
